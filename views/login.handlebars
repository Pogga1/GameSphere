<div class="flex-inline-block space-y-6 text-start">
    <div class="login-form justify-center space-y-6">
        <h2 class="page-title">Login</h2>
        <form class="form login space-y-4">
            <div class="form-group">
                <label for="username">username:</label>
                <input class="username-input form-input" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">Password:</label>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="button" id="login-form" type="submit">login</button>
            </div>
        </form>
    </div>
    <div class="signup-form justify-center space-y-6">
        <h2 class="page-title">Signup</h2>
        <form class="form signup space-y-4">
            <div class="form-group">
                <label for="username-signup">Username:</label>
                <input class="form-input" type="text" id="username-signup" />

            </div>

            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
               
                <button class="button" id="signup-form" type="submit">signup</button>
            </div>
        </form>
    </div>
</div>
<script src="./js/login.js"></script>
<script src="./js/signUp.js"></script>
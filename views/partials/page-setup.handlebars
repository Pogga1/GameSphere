<main>

    <nav class=" text-3xl sm:text-3xl flex space-x-4 ml-5 mt-10">
    
        {{#if loggedIn}}
        <button id="logout" class="logout hover:text-white">Logout</button>
        {{else}}
        <a href="/login" id="login" class="logout hover:text-white">Login</a>
        {{/if}}
        {{#if loggedIn}}
        <script src="/js/logout.js"></script>
        {{/if}}
    </nav>

    

    <div id="genre-bar" class="flex text-3xl justify-around mt-2 border-2 p-4">
        <button class="hover:text-white underline" class="action">Action</button>
        <button class="hover:text-white underline" class="adventure">Adventure</button>
        <button class="hover:text-white underline" class="horror">Horror</button>
        <button class="hover:text-white underline" class="puzzle">Puzzle</button>
        <button class="hover:text-white underline" class="mmo">MMO</button>
        <button class="hover:text-white underline" class="rpg">RPG</button>
        <button class="hover:text-white underline" class="survival">Survival</button>
    </div>

    <div class=" my-12 flex justify-center">
        <input id="search-input" type="text" placeholder="Search...">
    </div>
    <div class="post">

{{#each users as |post|}}
    {{> post-details}}
    {{/each}}
    
        {{#if loggedIn}}
        <a href="/create-post" id="create-post" class="hover:text-white ml-5">Create Post</a>
        {{else}}
        <a href="/login" class="underline hover:text-white ml-5">Create Post</a>
        {{/if}}
        {{#if loggedIn}}
        <script src="/js/newPost.js"></script>
        {{/if}}


        {{!-- <button id="create-post">Create Post</button> --}}
    </div>
</main>
</body>


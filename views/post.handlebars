<section class="container">
    <h3 class="post-title">{{post.title}}</h3>
    <h4> {{post.content}}</h4>
    <h4>Username: {{user.username}}</h4>
    {{#if loggedIn}}
    <section class="flex-row justify-center">
        {{#each user.post as |post|}}
        {{> post-details}}
        {{/each}}
    </section>
    <section>
        <h4>Comments</h4>
        <p>{{user.comment<}}</p>
    </section>
</section>
{{else}}
<a href="/login">You must login first to view the post</a>
{{/if}}